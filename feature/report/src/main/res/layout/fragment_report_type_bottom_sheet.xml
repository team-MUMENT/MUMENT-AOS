<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottomsheet_background">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_report_cancel"
            style="@style/TextView.Mument_H4_M16.Style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/rectangle_fill_white_11dp"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/cancel"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rectangle_fill_white_11dp"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toTopOf="@id/tv_report_cancel"
            app:layout_constraintEnd_toEndOf="@id/tv_report_cancel"
            app:layout_constraintStart_toStartOf="@id/tv_report_cancel">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_report_mument"
                style="@style/TextView.Mument_H4_M16.Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="뮤멘트 신고하기"
                android:textAlignment="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_block_user"
                style="@style/TextView.Mument_H4_M16.Style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="유저 차단하기"
                android:textAlignment="center" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
