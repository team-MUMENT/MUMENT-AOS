<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mument_android.app.presentation.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_mumentDetailFragment"
            app:destination="@id/mumentDetailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/mumentDetailFragment"
        android:name="com.mument_android.app.presentation.ui.detail.MumentDetailFragment"
        android:label="MumentDetailFragment"
        tools:layout="@layout/fragment_mument_detail"/>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.mument_android.app.presentation.ui.home.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_musicDetailFragment"
            app:destination="@id/musicDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicDetailFragment"
        android:name="com.mument_android.app.presentation.ui.home.MusicDetailFragment"
        android:label="MusicDetailFragment"
        tools:layout="@layout/fragment_music_detail">
        <action
            android:id="@+id/action_musicDetailFragment_to_mumentDetailFragment"
            app:destination="@id/mumentDetailFragment" />
    </fragment>
</navigation>