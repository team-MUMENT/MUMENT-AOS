<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_home"
    tools:layout="@layout/fragment_home">
    <navigation
        android:id="@+id/fragment_home"
        app:startDestination="@id/homeFragment">
        <fragment
            android:id="@+id/homeFragment"
            android:name="com.mument_android.home.HomeFragment"
            android:label="HomeFragment"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_mumentDetailFragment"
                app:destination="@id/mumentDetailFragment" />
            <action
                android:id="@+id/action_homeFragment_to_musicDetailFragment"
                app:destination="@id/musicDetailFragment" />
            <action
                android:id="@+id/action_homeFragment_to_historyFragment"
                app:destination="@id/historyFragment" />
        </fragment>

        <fragment
            android:id="@+id/musicDetailFragment"
            android:name="com.mument_android.detail.music.MusicDetailFragment"
            android:label="MusicDetailFragment"
            tools:layout="@layout/fragment_music_detail">

            <action
                android:id="@+id/action_homeMusicDetailFragment_to_mumentDetailFragment"
                app:destination="@id/mumentDetailFragment" />
            <action
                android:id="@+id/action_homeMusicDetailFragment_to_historyFragment"
                app:destination="@id/historyFragment" />
        </fragment>
        <fragment
            android:id="@+id/historyFragment"
            android:name="com.mument_android.detail.history.HistoryFragment"
            android:label="HistoryFragment"
            tools:layout="@layout/fragment_history">
            <argument
                android:name="musicId"
                app:argType="string" />
            <action
                android:id="@+id/action_homeHistoryFragment_to_mumentDetailFragment"
                app:destination="@id/mumentDetailFragment" />
        </fragment>
        <fragment
            android:id="@+id/mumentDetailFragment"
            android:name="com.mument_android.detail.mument.MumentDetailFragment"
            android:label="MumentDetailFragment"
            tools:layout="@layout/fragment_mument_detail">
            <action
                android:id="@+id/action_mumentDetailFragment_to_historyFragment_home"
                app:destination="@id/historyFragment" />
            <action
                android:id="@+id/action_mumentDetailFragment_to_musicDetailFragment_home"
                app:destination="@id/musicDetailFragment" />
        </fragment>

    </navigation>
    <fragment
        android:id="@+id/fragment_record"
        android:name="com.mument_android.record.RecordFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_record">
        <argument
            android:name="mumment_id_for_edit"
            app:argType="string"
            app:nullable="true" />
    </fragment>


    <navigation
        android:id="@+id/fragment_locker"
        app:startDestination="@id/lockerFragment">

        <fragment
            android:id="@+id/lockerFragment"
            android:name="com.mument_android.locker.LockerFragment"
            android:label="LockerFragment"
            tools:layout="@layout/fragment_locker">
            <action
                android:id="@+id/action_lockerFragment_to_mumentDetailFragment"
                app:destination="@id/mumentDetailFragment" />
        </fragment>
        <fragment
            android:id="@+id/mumentDetailFragment"
            android:name="com.mument_android.detail.mument.MumentDetailFragment"
            android:label="MumentDetailFragment"
            tools:layout="@layout/fragment_mument_detail">
            <action
                android:id="@+id/action_mumentDetailFragment_to_musicDetailFragment_locker"
                app:destination="@id/musicDetailFragment" />
            <action
                android:id="@+id/action_mumentDetailFragment_to_historyFragment_locker"
                app:destination="@id/historyFragment" />
        </fragment>

        <fragment
            android:id="@+id/musicDetailFragment"
            android:name="com.mument_android.detail.music.MusicDetailFragment"
            android:label="MusicDetailFragment"
            tools:layout="@layout/fragment_music_detail">
            <action
                android:id="@+id/action_musicDetailFragment_to_historyFragment"
                app:destination="@id/historyFragment" />
            <action
                android:id="@+id/action_musicDetailFragment_to_mumentDetailFragment"
                app:destination="@id/mumentDetailFragment" />

        </fragment>
        <fragment
            android:id="@+id/historyFragment"
            android:name="com.mument_android.detail.history.HistoryFragment"
            android:label="LockerHistoryFragment"
            tools:layout="@layout/fragment_history"></fragment>
    </navigation>
</navigation>