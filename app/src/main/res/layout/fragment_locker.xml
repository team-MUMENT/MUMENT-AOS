<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.presentation.ui.locker.LockerFragment">

        <TextView
            android:id="@+id/tv_locker_title"
            style="@style/TextView.Mument_H1_B25.Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="27dp"
            android:text="@string/bottom_navi_locker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_locker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_locker_title"
            app:tabIndicatorColor="@color/mument_color_purple1" />

        <ImageView
            android:id="@+id/iv_locker_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_locker" />

        <ImageView
            android:id="@+id/iv_locker_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/selector_ic_list"
            app:layout_constraintBottom_toBottomOf="@+id/iv_locker_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_locker_filter" />

        <ImageView
            android:id="@+id/iv_locker_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:src="@drawable/selector_ic_grid"
            app:layout_constraintBottom_toBottomOf="@+id/iv_locker_list"
            app:layout_constraintEnd_toStartOf="@+id/iv_locker_list"
            app:layout_constraintTop_toTopOf="@+id/iv_locker_list" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_locker"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_locker_filter" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>