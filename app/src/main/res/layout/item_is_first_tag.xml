<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="isFirstTag"
            type="com.mument_android.app.domain.entity.TagEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_tag_is_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="7dp"
            android:text="@{isFirstTag.tagString}"
            android:paddingVertical="5dp"
            style="@style/TextView.Mument_B7_M12.Style"
            android:textColor="@color/mument_color_purple1"
            android:background="@drawable/rectangle_fill_purple2_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="처음"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
